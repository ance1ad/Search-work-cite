@model JobResume
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <nav aria-label="breadcrumb">
                <style>
                    p {
                        font-size: 1.25rem;
                        color: #000000
                    }

                    a {
                        font-size: 1.25rem;
                        color: #ffffff
                    }

                    h2 {
                        font-size: 2rem;
                        color: #000099
                    }

                    body::before {
                        content: "";
                        position: fixed;
                        top: 350px;
                        left: 660px;
                        width: 100%;
                        height: 100%;
                        background: url('@Url.Content("~/photo/resumeBack.jpg")');
                        background-size: cover;
                        background-repeat: no-repeat;
                        background-position: center right; /* Сдвигаем вправо */
                        z-index: -1;
                        filter: blur(0px);
                        transform: scale(2); /* Увеличиваем масштаб */
                    }

                    body {
                        background: #77acf1;
                        color: #000000;
                        overflow-x: hidden;
                    }

                    .rounded-custom {
                        border-radius: 30px;
                    }
                    }
                </style>

                <a href="https://localhost:7161/JobResume/%D0%A0%D0%B0%D0%B1%D0%BE%D1%82%D0%BE%D0%B4%D0%B0%D1%82%D0%B5%D0%BB%D1%8F%D0%BC">⬅️</a>
            </nav>
        </div>

    </nav>
    <section class="bg-white space-sm">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 mb-3 mb-sm-0">
                    <div class="d-flex justify-content-center align-items-center">
                        <img alt="Image" src="@Model.Image" class="rounded-custom img-fluid mx-auto" />
                    </div>
                </div>

                <div class="col-lg-5">
                    <strong class="d-inline-block mb-2 text-primary display-6">Резюме: "@Model.CareerObjective"</strong>
                    <h2 class="lead mb-3">пол: @Model.Gender</h2>
                    <h2 class="lead mb-3">ФИО: @Model.FullName</h2>
                    <p class="lead mb-3"> @Model.Description</p>
                    <h2 class="lead mb-3">город: @Model.Address.City</h2>
                    <p class="lead mb-3"> Образование: @Model.Education</p>
                    <h2 class="lead mb-3"> Возраст: @Model.Age, стаж работы (лет): @Model.WorkExpirience</h2>
                    <h2 class="lead mb-3"> Телефон: @Model.PhoneNumber </h2>
                    <h2 class="lead mb-3"> Почта: @Model.Email</h2>
                    <h3 class="mb-0">
                        <a class="text-dark">Ожидаемая заработная плата: @Model.Salary руб.</a>
                    </h3>
                </div>
            </div>
        </div>
    </section>
</html>
